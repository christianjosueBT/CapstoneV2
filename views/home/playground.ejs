<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scan and Go!</title>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- my styles -->
    <link rel="stylesheet" href="/styles/styles.css" />

    <!-- quaggajs live_w_locator files -->
    <link rel="canonical" href="https://serratus.github.io/examples/live_w_locator.html" />

    <!-- leaflet css and js files -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
      integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
      crossorigin="" media="print" onload="this.media='all'" />

    <!-- leaflet routing machine -->
    <!-- <link rel="stylesheet" href="https://unpkg.com/leaflet@1.2.0/dist/leaflet.css" /> -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css"
      media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="/styles/MarkerCluster.Default.css" media="print" onload="this.media='all'" />

    <!-- these should load when needed -->
    <!-- <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
        integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
        crossorigin="" defer></script>
        <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js" defer></script>
        <script src="/javascripts/leaflet.markercluster-src.js" defer></script> -->
    <!-- <script src="https://unpkg.com/leaflet@1.2.0/dist/leaflet.js" defer></script> -->
    <script src="https://kit.fontawesome.com/46528decd5.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <div class="wrapper">
      <!-- left side button and navbar (user profile) -->
      <div class="btn-left"><i class="fa-solid fa-bars"></i></div>
      <nav class="sidebar-left">
        <% if (Object.keys(user).length !== 0) { %>
        <div class="sidebar-left__profile">
          <img src="/imgs/userProfile.png" alt="">
          <p>Hello <%=user.username%></p>
        </div>
        <ul class="main_side">
          <!-- <li class="active"><a href="#">Your Store</a></li> -->
          <li class="simulateLink findStores">Find Supporting Stores</li>
          <!-- <li><a href="#">Transaction History</a></li> -->
          <!-- <li><a href="#">Account Information</a></li> -->
          <!-- <li><a href="#">Delivery</a></li> -->
          <li>
            <form id="logoutForm" action="https://10.0.0.154:2000/api/v1/users/logout" method="POST">
              <button class="button button--form">Logout</button>
            </form>
          </li>
        </ul>
        <% } else { %>
        <div class="sidebar-left__profile">
          <img src="/imgs/userProfile.png" alt="">
          <p>Welcome to Scan and Go!</p>
        </div>
        <ul class="main_side">
          <li class="active simulateLink findStores">Find Supporting Stores</li>
          <li><a href="/users/register">Sign Up</a></li>
          <li><a href="/users/login">Sign In</a></li>
        </ul>
        <% } %>
      </nav>

      <!-- right side button and navbar (cart) -->
      <div class="btn-right"><i class="fa-solid fa-cart-shopping"></i></div>
      <nav class="sidebar-right">
        <ul id="rightCart">
          <li>
            <input hidden type="number" id="totalWeight" value="0">
            <h6>Subtotal<br>$<span id="subtotal">0</span></h6>
            <a href="#"><button class="btn btn-warning rounded-pill" id="checkout">Proceed to Checkout</button></a>
          </li>
        </ul>
      </nav>

      <!-- main scanning section -->
      <div class="viewport--placeholder">
        <button id="scan" type="button" class="button rounded-pill">START SCANNING!</button>
      </div>
      <section id="container" class="container">
        <div id="interactive" class="viewport"></div>
      </section>

      <script src="/javascripts/general.js" type="text/javascript"></script>
      <script src="/javascripts/quagga.min.js" type="text/javascript"></script>
      <script src="/javascripts/playground.js" type="text/javascript"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    </div>
    <div class="alerts"></div>
  </body>

</html>