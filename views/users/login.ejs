<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login to Scan and Go!</title>

    <!-- bootstrap and fontawesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">

    <!-- my styles -->
    <link rel="stylesheet" href="/styles/styles.css" />

  </head>

  <body>

    <section class="vh-75 container-grid">
      <main class="main container-grid">
        <aside class="sidebar">
          <form id="loginPageForm" action="https://10.0.0.154:2000/api/v1/users/login" method="POST"
            class="mb-md-5 mt-md-4 pb-5 needs-validation" novalidate>

            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
            <p class="mb-5">Please enter your email address and password</p>

            <div class="form-outline form-white mb-4">
              <input type="email" id="email" name="email" placeholder="email" class="form-control form-control-lg" />
              <label class="form-label" for="email"></label>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="form-outline form-white mb-4">
              <input type="password" id="password" name="password" placeholder="password"
                class="form-control form-control-lg" />
              <label class="form-label" for="password"></label>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="d-grid">
              <button id="loginButton" type="submit" class="d-grid btn btn-light btn-lg">Login</button>
            </div>
          </form>
        </aside>
      </main>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
    <script src="/javascripts/general.js"></script>
    <section class="alerts"></section>
  </body>

</html>